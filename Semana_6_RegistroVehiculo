
using System;
using System.Collections.Generic;

// Clase que representa un Vehículo
class Vehiculo
{
    // Propiedades del vehículo
    public string Placa { get; set; }  // Placa del vehículo
    public string Marca { get; set; }  // Marca del vehículo
    public string Modelo { get; set; } // Modelo del vehículo
    public int Año { get; set; }       // Año del vehículo
    public decimal Precio { get; set; } // Precio del vehículo
}

class Program
{
    // Lista para almacenar los vehículos
    static List<Vehiculo> vehiculos = new List<Vehiculo>();

    static void Main(string[] args)
    {
        // Crear una instancia de Vehículo y asignar valores a sus propiedades
        Vehiculo vehiculo1 = new Vehiculo
        {
            Placa = "ABC123",
            Marca = "Toyota",
            Modelo = "Corolla",
            Año = 2020,
            Precio = 20000m
        };

        // Agregar el vehículo a la lista de vehículos
        vehiculos.Add(vehiculo1);

        // Mostrar todos los vehículos almacenados en la lista
        foreach (var vehiculo in vehiculos)
        {
            // Imprimir los detalles de cada vehículo
            Console.WriteLine($"Placa: {vehiculo.Placa}, Marca: {vehiculo.Marca}, Modelo: {vehiculo.Modelo}, Año: {vehiculo.Año}, Precio: {vehiculo.Precio:C}");
        }
    }
}
